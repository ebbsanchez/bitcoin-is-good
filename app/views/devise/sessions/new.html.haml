#login-page.row
	.col-md-6.offset-md-3
		%h2 登入
		= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
			.form-inputs
				= f.input :email, label: "信箱" ,required: false, autofocus: true
				= f.input :password, label:"密碼", required: false
				= f.input :remember_me,label: "記住我" ,as: :boolean if devise_mapping.rememberable?
			.form-actions
				= f.button :submit, "登入"
		= render "devise/shared/links"
